@using OzonShop.Models;
@section header
{
    <link href="@Url.Content("/content/slider.css")" rel = "Stylesheet" type="text/css" /> 
}

@model Shop.DataBase.Product
@{
    ViewBag.Title = @GlobalRes.Resource.Details;  
}

@Scripts.Render("~/scripts/slider.js")

<div style="border: 4px solid blue">
    <ul class="breadcrumb">
            <li>@Html.ActionLink(@GlobalRes.Resource.Products, "Product")<span class="divider">/</span></li>
            <li class="active">@GlobalRes.Resource.Details </li>
    </ul>    
    <fieldset>  
        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Id - </b>
                @Html.DisplayFor(model => model.ProductId)
            </label>
        </div> 

        <div class="form-group">
            <label>
                <b>@Html.DisplayNameFor(model => model.Url) - </b>
                @Html.DisplayFor(model => model.Url)
            </label>
        </div>

        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Name - </b>
                @Html.DisplayFor(model => model.Name)
            </label>
        </div>
    
        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Price - </b>
                @Html.DisplayFor(model => model.Price)
            </label>
        </div>        

        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Description - </b>
                @Html.DisplayFor(model => model.Description)
            </label>
        </div>
    
        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Barcode - </b>
                @Html.DisplayFor(model => model.Barcode)
            </label>
        </div>
   
       <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Discount - </b>
                @Html.DisplayFor(model => model.Discount)
            </label>
        </div>
    
        <div class="form-group">
            <label>
                <b>@GlobalRes.Resource.Category - </b>
                @ViewBag.Category
            </label>
        </div> 
        <div id="slider-wrap">
            <div id="slider">		
                 @foreach (var item in ViewBag.Pictures)
                 {
                     <div class="slide" style="position: absolute; top: 0px; left: 0px; display: none"><img src="@item.PictureUrl" width="320" height="100" alt="image"/></div>          
                 }   
		    </div>
        </div>   
        <br />
        <h3>@GlobalRes.Resource.Parameters:</h3>
        <table class="table table-striped table-hover">
            <tr>        
                <th>
                    @GlobalRes.Resource.Name
                </th>
                <th>
                    @GlobalRes.Resource.Value
                </th>
            </tr>
            @foreach (ParametersModel item in ViewBag.Param)
            {
                <tr class="success">            
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>                
                </tr>            
            }
        </table>   
    </fieldset>
</div>
