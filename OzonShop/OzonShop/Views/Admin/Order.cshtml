@model IEnumerable<Shop.DataBase.Order>
@{
    ViewBag.Title = @GlobalRes.Resource.Orders;
}
<div style="border: 4px solid blue">
    <div>
        <ul class="nav nav-tabs">                
            <li>@Html.ActionLink(@GlobalRes.Resource.Products, "Product")</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Category, "Category")</li>
            <li class="active"><a href="#">@GlobalRes.Resource.Orders</a></li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Users, "ViewUser")</li>
        </ul>
    </div> 
    @*
    <div class="navbar-form pull-left">
    @using (Html.BeginForm())
    {    
        @Html.TextBox("SearchString", null, new { @class = "input-xlarge", placeholder = @GlobalRes.Resource.SearchDateOrder }) 
        <input type="submit" value="Filter" class="btn btn-success"/>
    } 
    </div>*@

    <table class="table table-striped table-hover">
        <tr>        
            <th>
                @GlobalRes.Resource.OrderData
            </th>
            <th>
                @GlobalRes.Resource.TotalPrice
            </th>
            <th></th>
        </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="success">            
                <td>
                    @Html.DisplayFor(modelItem => item.OrderData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>            
                <td>            
                    @Html.ActionLink(@GlobalRes.Resource.Details, "DetailsOrder", new { id = item.OrderId }, new { @class="btn" })
                    @Html.ActionLink(@GlobalRes.Resource.Delete, "DeleteOrder", new { id = item.OrderId }, new { @class="btn", onclick = "return confirm('Are You Sure?')" })
                </td>
            </tr>
        }
    }
    </table>
</div>