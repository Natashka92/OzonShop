@model IEnumerable<Shop.DataBase.Product>
@{
    ViewBag.Title = GlobalRes.Resource.Products;
}
<div style="border: 4px solid blue">
    <div>
        <ul class="nav nav-tabs">        
            <li class="active"><a href="#">@GlobalRes.Resource.Products</a></li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Category, "Category")</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Orders, "Order")</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Users, "ViewUser")</li>
        </ul>
    </div> 
    <div class="navbar-form pull-left">
    @using (Html.BeginForm())
    {    
        @Html.TextBox("SearchString", null, new { @class = "input-xlarge", placeholder = @GlobalRes.Resource.SearchNameProduct }) 
        <input type="submit" value="@GlobalRes.Resource.Filter" class="btn btn-success"/>
        <div class="btn btn-success">@Html.ActionLink(@GlobalRes.Resource.CreateNew + " " + @GlobalRes.Resource.Product, "CreateProduct")</div>
    } 
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @GlobalRes.Resource.Id
            </th>
            <th>
                @GlobalRes.Resource.Name
            </th>
            <th>
                @GlobalRes.Resource.Price
            </th>
            <th>
                @GlobalRes.Resource.Description
            </th>
            <th>
                @GlobalRes.Resource.Barcode
            </th>
            <th>
                @GlobalRes.Resource.Discount
            </th>
            <th>
                @GlobalRes.Resource.Category
            </th>
            <th></th>
        </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Barcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.ActionLink(@GlobalRes.Resource.Edit, "EditProduct", new { id = item.ProductId }, new { @class="btn" })                
                    @Html.ActionLink(@GlobalRes.Resource.Details, "DetailsProduct", new { id = item.ProductId }, new { @class = "btn" })
                    @Html.ActionLink(@GlobalRes.Resource.Delete, "DeleteProduct", new { id = item.ProductId }, new { @class="btn", onclick = "return confirm('Are You Sure?')" })
                </td>
            </tr>
        }
    }
    </table>
</div>