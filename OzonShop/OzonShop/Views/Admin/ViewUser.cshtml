@model IEnumerable<Shop.DataBase.User>
@{
    ViewBag.Title = @GlobalRes.Resource.Users;
}
<div style="border: 4px solid blue">
    <div>
        <ul class="nav nav-tabs">        
            <li>@Html.ActionLink(@GlobalRes.Resource.Products, "Product")</li>        
            <li>@Html.ActionLink(@GlobalRes.Resource.Category, "Category")</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Orders, "Order")</li>
            <li class="active"><a href="#">@GlobalRes.Resource.Users</a></li>
        </ul>
    </div> 
    <div class="navbar-form pull-left">
    @using (Html.BeginForm())
    {    
        @Html.TextBox("SearchString", null, new { @class = "input-xlarge", placeholder = @GlobalRes.Resource.SearchLoginUser }) 
        <input type="submit" value=@GlobalRes.Resource.Filter class="btn btn-success"/>
    } 
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @GlobalRes.Resource.UserName
            </th>
            <th>
                @GlobalRes.Resource.Login
            </th>
            <th>
                @GlobalRes.Resource.Email
            </th>
            <th>
                @GlobalRes.Resource.Distribution
            </th>
            <th>
                @GlobalRes.Resource.Phone
            </th>
            <th></th>
        </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distribution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink(@GlobalRes.Resource.Details, "DetailsUser", new { id = item.UserId }, new { @class="btn" })
                    @Html.ActionLink(@GlobalRes.Resource.Delete, "DeleteUser", new { id = item.UserId }, new {@class="btn", onclick = "return confirm('Are You Sure?')" })
                </td>
            </tr>
        }
    }
    </table>
</div>