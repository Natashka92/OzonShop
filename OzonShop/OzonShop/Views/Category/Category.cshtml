@model IEnumerable<Shop.DataBase.Category>
@{
    ViewBag.Title = @GlobalRes.Resource.Category;
}
<div style="border: 4px solid blue">
    <div>
        <ul class="nav nav-tabs">               
            <li>@Html.ActionLink(@GlobalRes.Resource.Products, "Product", "Admin", null, null)</li>
            <li class="active"><a href="#">@GlobalRes.Resource.Category</a></li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Orders, "Order", "Order", null, null)</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Users, "ViewUser", "User", null, null)</li>
        </ul>
    </div> 
    <div class="navbar-form pull-left">
    @using (Html.BeginForm())
    {    
        @Html.TextBox("SearchString", null, new { @class = "input-xlarge", placeholder = @GlobalRes.Resource.SearchNameCategory }) 
        <input type="submit" value="@GlobalRes.Resource.Filter" class="btn btn-success"/>
        <div class="btn btn-success">@Html.ActionLink(@GlobalRes.Resource.CreateNew, "CreateCategory")</div>
    } 
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @GlobalRes.Resource.Id
            </th>
            <th>
                @GlobalRes.Resource.Name
            </th>
            <th></th>
        </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink(@GlobalRes.Resource.Edit, "EditCategory", "Category", new { id = item.CategoryId }, new { @class = "btn" })
                    @Html.ActionLink(@GlobalRes.Resource.Delete, "DeleteCategory", "Category", new { id = item.CategoryId }, new { @class = "btn", onclick = "return confirm('Are You Sure?')" })
                </td>
            </tr>
        }
    }
    </table>
</div>