@model IEnumerable<Shop.DataBase.Order>
@{
    ViewBag.Title = @GlobalRes.Resource.Orders;
}
<div style="border: 4px solid blue">
    <div>
        <ul class="nav nav-tabs">        
            <li>@Html.ActionLink(@GlobalRes.Resource.Basket, "PersonalPage")</li>
            <li>@Html.ActionLink(@GlobalRes.Resource.Adress, "Adress")</li>
            <li class="active"><a href="#">@GlobalRes.Resource.Orders</a></li>
        </ul>
    </div>
    <table class="table table-striped table-hover">
        <tr>        
            <th>
                @GlobalRes.Resource.OrderData
            </th>
            <th>
                @GlobalRes.Resource.TotalPrice
            </th>
            <th></th>
        </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="success">            
                <td>
                    @Html.DisplayFor(modelItem => item.OrderData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>            
                <td>            
                    @Html.ActionLink(@GlobalRes.Resource.Details, "DetailsOrder", "Order", new { id = item.OrderId }, new { @class="btn" })
                </td>
            </tr>
        }
    }
    </table>
</div>
