@if (Request.IsAuthenticated)
{
    <ul class="nav">       
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@GlobalRes.Resource.Hello @User.Identity.Name</a>
            <ul class="dropdown-menu">   
                <li></li>                                   
            </ul>
        </li>
        <li><div class="btn">@Html.ActionLink(@GlobalRes.Resource.LogOff, "LogOff", "Account")</div></li>
    </ul>
}
else
{    
     <ul class="btn-group">              
        <li class="btn">@Html.ActionLink(@GlobalRes.Resource.Register, "Register", "Account")</li>
        <li class="btn">@Html.ActionLink(@GlobalRes.Resource.Login, "Login", "Account")</li>    
     </ul>          
}
